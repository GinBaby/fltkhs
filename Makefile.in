EXECUTABLEDIR = executables
LIBDIR = c-lib
OBJECT_FILES = object_files
SRC = c-src
EXAMPLES = c-examples
DIRS = $(SRC) $(EXAMPLES)
CLEANUPDIRS = $(EXECUTABLEDIR) $(LIBDIR) $(OBJECT_FILES)
.SILENT:
.PHONY: src all clean
src:
	cd $(SRC); $(MAKE) all
examples: src
	cd $(EXAMPLES); $(MAKE) all
all: examples
clean:
	for dir in $(CLEANUPDIRS); do\
	 	echo "=== removing $$dir ===";\
		if [ -d "./$$dir" ];then     \
	 	  rm -rf $$dir; \
                fi \
	done
